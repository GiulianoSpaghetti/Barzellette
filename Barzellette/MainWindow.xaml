<Window x:Class="Barzellette.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Barzellette"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox x:Name="txtid" Grid.Row="0" Text="1"/>
        <WebBrowser Height="200" Name="wbbarzelletta" Grid.Row="1"></WebBrowser>
        <Button Name="btnVisualizza" Click="btn_Clicked" Content="Visualizza" Grid.Row="2"/>
    </Grid>
</Window>
